<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mcvNotificationItem"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin_8dp"
    app:cardElevation="0dp"
    android:layout_marginStart="@dimen/margin_15dp"
    android:layout_marginEnd="@dimen/margin_15dp"
    android:layout_marginBottom="@dimen/margin_15dp"
    app:cardBackgroundColor="@color/light_white3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNotificationTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NotificationTitle"
                android:fontFamily="@font/barlow_semibold"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/text_size_12sp"/>

            <TextView
                android:id="@+id/tvNotificationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NotificationDate"
                android:fontFamily="@font/barlow_medium"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/text_size_12sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvNotificationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NotificationMessage"
            android:fontFamily="@font/barlow_medium"
            android:textColor="@color/grey6"
            android:layout_marginTop="@dimen/margin_8dp"
            android:textSize="@dimen/text_size_12sp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>