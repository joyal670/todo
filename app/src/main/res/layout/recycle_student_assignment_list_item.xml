<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/athens_gray">

    <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/margin_10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/timeBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_55dp"
                android:fontFamily="@font/barlow_medium"
                android:gravity="center"
                android:text="9"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"
                app:backgroundTint="@color/pomegranate"
                app:cornerRadius="@dimen/margin_10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvStudentAssignmentDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:gravity="start"
                    android:text="assignment_deadline"
                    android:maxLines="10"
                    android:ellipsize="end"
                    android:textColor="@color/dove_gray"
                    android:textSize="@dimen/text_size_14sp" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:fontFamily="@font/barlow_medium"
                    android:gravity="start"
                    android:text="End Date : 18/01/2021"
                    android:textColor="@color/grey6"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

