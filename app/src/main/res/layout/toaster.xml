<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llToastBackground"
    android:gravity="center_vertical"
    android:minHeight="?actionBarSize"
    android:orientation="horizontal"
    tools:background="@color/de_york"
    android:paddingStart="@dimen/text_size_10sp"
    android:paddingTop="@dimen/margin_5dp"
    android:paddingEnd="@dimen/text_size_10sp"
    android:paddingBottom="@dimen/margin_5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/acivStatus"
        app:srcCompat="@drawable/ic_round_warning_24"
        android:padding="@dimen/margin_2dp"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actvStatus"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/white"
        android:fontFamily="@font/barlow_medium"
        android:textSize="@dimen/text_size_12sp"
        tools:text="Medicine name moved to Active Lorem ipsum, or lipsum as it is. "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>